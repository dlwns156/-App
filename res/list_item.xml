<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_text_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="지역"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_text_time"
        app:layout_constraintStart_toEndOf="@+id/list_text_time"
        app:layout_constraintTop_toTopOf="@+id/list_text_time" />

    <CheckBox
        android:id="@+id/list_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:text="드론승인"
        app:layout_constraintBottom_toBottomOf="@+id/list_text_loc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_text_loc"
        app:layout_constraintTop_toTopOf="@+id/list_text_loc" />

    <TextView
        android:id="@+id/list_text_day"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:text="날짜"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_text_id"
        app:layout_constraintStart_toEndOf="@+id/list_text_id"
        app:layout_constraintTop_toTopOf="@+id/list_text_id" />

    <TextView
        android:id="@+id/list_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="시간"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_text_day"
        app:layout_constraintStart_toEndOf="@+id/list_text_day"
        app:layout_constraintTop_toTopOf="@+id/list_text_day" />

</androidx.constraintlayout.widget.ConstraintLayout>